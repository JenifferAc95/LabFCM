<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.edu.udea.compumovil.gr07_20171.labfcm.About">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMPUTACIÓN MOVIL"
            android:gravity="right"
            android:textColor="@color/circleButton"
            android:layout_marginTop="40dp"
            android:textSize="15sp"
            android:padding="20dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="20dp"
            android:text="'El curso Computación Móvil introduce los conceptos básicos acerca del diseño y desarrollo de aplicaciones móviles. En el curso se tratan temas generales de computación móvil, como evolución de las redes inalámbricas, caracteristicas especiales de los dispositivos móviles. Además veremos temas particulares en el desarrollo de aplicaciones en Android referentes a la arquitectura de software, manejo del framework de programación  y desarrollo de interfaces de usuario utilizando Material Design.' "
            android:gravity="right" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:gravity="right"
            android:padding="20dp"
            android:text="Docente: Juan Jaiber Yepes Zapata"
            android:textSize="15sp" />

    </LinearLayout>

</FrameLayout>
